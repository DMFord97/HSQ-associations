# Code in R (v4.3.1) for the paper: "Associations of hospital stress"

# Load packages
install.packages("tidyverse")
library(tidyverse)
install.packages("psych")
library(psych)
install.packages("readr")
library(readr)

# Read data
rdata <- read_csv("rdata.csv")
View(rdata)

# Set N/A values (i.e. values of 11) in HSQ equal to 1
rdata <- rdata %>% mutate_at(vars(starts_with("HSQ_")), ~ ifelse(. == 11, 1, .))

# Calculate a total HSQ score for each participant
rdata <- rdata %>% mutate(HSQ_total = rowSums(across(HSQ_1:HSQ_67)))
